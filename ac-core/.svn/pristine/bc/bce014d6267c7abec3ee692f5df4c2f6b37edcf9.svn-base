package sga.sol.ac.core.entity.criteria;

public class SortParam {
	public final static String DIR_ASC = "ASC";
	public final static String DIR_DESC = "DESC";
	
	String sortFieldNm;
	String sortDir;
	
	public SortParam() {
	}
	
	public SortParam(String sortFieldNm, String sortDir) {
		setSortData(sortFieldNm, sortDir);
	}
	
	public void setSortData(String sortFieldNm, String sortDir) {
		this.sortFieldNm = sortFieldNm;
		this.sortDir = sortDir;
	}
	
	public String getSortFieldNm() {
		return sortFieldNm;
	}
	public void setSortFieldNm(String sortFieldNm) {
		this.sortFieldNm = sortFieldNm;
	}
	public String getSortDir() {
		return sortDir;
	}
	public void setSortDir(String sortDir) {
		this.sortDir = sortDir;
	}
}
