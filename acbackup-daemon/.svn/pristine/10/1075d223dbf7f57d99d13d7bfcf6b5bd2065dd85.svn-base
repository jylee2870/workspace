package sga.sol.ac.acotp.daemon.process.authentication;

import java.util.concurrent.TimeUnit;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.warrenstrange.googleauth.GoogleAuthenticator;
import com.warrenstrange.googleauth.GoogleAuthenticatorConfig.GoogleAuthenticatorConfigBuilder;

import sga.sol.ac.acotp.daemon.server.ServerProperty;
import sga.sol.ac.acotp.manager.exception.AcotpException;

@Service
public class ServiceTOTPProcess extends AbstractProcess implements IAuthProcess{
	public static int DEFAULT_TOTP_WINDOW_SIZE = 2;
	
	@Autowired
	private ServerProperty serverProperty;
	
	@Override
	public String getUserPassword(String userId) throws AcotpException {
		String secretKey = getSecretKeyByUserId(userId);

		int windowSize = DEFAULT_TOTP_WINDOW_SIZE;
		
		if(serverProperty.getTotpWindowSize() != null){
			windowSize = Integer.parseInt(serverProperty.getTotpWindowSize());
		}
		
		GoogleAuthenticatorConfigBuilder gacb = new GoogleAuthenticatorConfigBuilder()
				.setTimeStepSizeInMillis(TimeUnit.SECONDS.toMillis(30)).setWindowSize(windowSize).setCodeDigits(6);
		GoogleAuthenticator ga = new GoogleAuthenticator(gacb.build());

		return String.format("%06d", ga.getTotpPassword(secretKey));
	}

	@Override
	public boolean authorize(String userId, String otpPassword) throws AcotpException {
		
		int password = Integer.parseInt(otpPassword);
		String secretKey = getSecretKeyByUserId(userId);

		int windowSize = 2;
		
		if(serverProperty.getTotpWindowSize() != null){
			windowSize = Integer.parseInt(serverProperty.getTotpWindowSize());
		}
		
		GoogleAuthenticatorConfigBuilder gacb = new GoogleAuthenticatorConfigBuilder()
				.setTimeStepSizeInMillis(TimeUnit.SECONDS.toMillis(30)).setWindowSize(windowSize).setCodeDigits(6);
		GoogleAuthenticator ga = new GoogleAuthenticator(gacb.build());
		
		return ga.authorize(secretKey, password);
	}

	@Override
	public int getOtpType() {
		return OTP_TOTP_TYPE;
	}

